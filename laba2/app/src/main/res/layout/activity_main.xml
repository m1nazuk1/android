<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.mr_lab2.MainActivity">

    <!-- ImageView для отображения фигуры -->
    <ImageView
        android:id="@+id/shape_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:visibility="gone" /> <!-- Изначально скрыто -->

    <!-- Текстовое поле для сообщений, расположенное внизу экрана -->
    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Здравствуйте, выберите цвет и форму из меню."
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center" />

</RelativeLayout>